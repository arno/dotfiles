general {
        colors = true
        interval = 1
}

order += "ipv6"
order += "disk /"
order += "disk /home"
order += "run_watch DHCP"
#order += "run_watch VPN"
order += "wireless eth1"
order += "ethernet eth0"
order += "battery 1"
order += "load"
order += "volume master"
order += "time"

wireless eth1 {
        format_up = "W: (%essid) %ip"
        format_down = "W: down"
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip"
        format_down = "E: down"
}

battery 1 {
        format = "%status %percentage %remaining"
}

run_watch DHCP {
        pidfile = "/run/sendsigs.omit.d/network-manager.dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

time {
        format = "%d/%m %H:%M"
}

load {
        format = "%5min"
}

disk "/" {
	format = "/ %free"
}

disk "/home" {
	format = "/home %free"
}

#disk "/" {
#        format = "%free (or: %percentage_used used, %percentage_used_of_avail used of avail, %percentage_free free, %percentage_avail avail)"
#}

